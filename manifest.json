{
  "manifest_version": 3,
  "name": "Ajou Calendar",
  "version": "1.0",
  "action": {
    "default_popup": "loginPopup.html"
  },
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["*://eclass2.ajou.ac.kr/*", "*://your-backend.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://eclass2.ajou.ac.kr/ultra/*"],
      "js": ["popup.js"]
    }
  ]
}
